/* --- Desktop: “real keyboard” stagger + bigger keys --- */
@media (min-width: 2000px) {
  #hangman {
    --key-w: 52px;   /* bigger so it doesn’t look tiny */
    --key-h: 48px;
    --key-gap: 8px;
  }

  #hangman .keyboard-row {
    display: flex;
    justify-content: center;
    gap: var(--key-gap);
  }

  #hangman .key-btn {
    width: var(--key-w);
    height: var(--key-h);
    min-width: 0;        /* don’t fight width */
    font-size: 1.05rem;
    border-radius: 10px;
  }

  /* Stagger: half-key + one-and-a-half-key */
  #hangman .keyboard-row:nth-child(2) {
    padding-left: calc((var(--key-w) + var(--key-gap)) * 0.5);
  }

  #hangman .keyboard-row:nth-child(3) {
    padding-left: calc((var(--key-w) + var(--key-gap)) * 1.5);
  }
}
