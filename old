@media (min-width: 700px) {
  #hangman {
    --key-w: 44px;
    --key-h: 44px;
    --key-gap: 6px;
  }

  #hangman .keyboard-row {
    display: flex;
    justify-content: center;
    gap: var(--key-gap);
  }

  #hangman .key-btn {
    width: var(--key-w);
    height: var(--key-h);
    padding: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  #hangman .keyboard-row:nth-child(2) {
    padding-left: calc((var(--key-w) + var(--key-gap)) * 0.5);
  }

  #hangman .keyboard-row:nth-child(3) {
    padding-left: calc((var(--key-w) + var(--key-gap)) * 1.5);
  }
}



